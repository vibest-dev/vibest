{
  "name": "desktop",
  "version": "0.0.1",
  "private": true,
  "description": "Vibest Desktop Application",
  "type": "module",
  "main": "./dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "start": "electron-vite preview",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "pnpm run typecheck:node && pnpm run typecheck:web",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "pnpm run build && electron-builder --dir",
    "build:mac": "electron-vite build && electron-builder --mac",
    "clean": "git clean -xdf node_modules .turbo dist",
    "e2e": "pnpm run build && playwright test -c e2e/playwright.config.ts",
    "e2e:headed": "pnpm run build && playwright test -c e2e/playwright.config.ts --headed",
    "e2e:report": "playwright show-report e2e/report",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@xterm/addon-web-links": "^0.12.0",
    "electron-store": "^10.0.1",
    "node-pty": "^1.1.0",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@fontsource-variable/geist": "^5.2.7",
    "@fontsource-variable/geist-mono": "^5.2.7",
    "@orpc/client": "^1.9.1",
    "@orpc/contract": "^1.9.1",
    "@orpc/experimental-publisher": "^1.13.4",
    "@orpc/server": "^1.8.6",
    "@orpc/tanstack-query": "^1.8.6",
    "@pierre/diffs": "^1.0.9",
    "@playwright/test": "^1.50.1",
    "@tailwindcss/vite": "^4.1.12",
    "@tanstack/react-query": "^5.90.20",
    "@types/node": "^24.10.13",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vibest/services": "workspace:*",
    "@vibest/shared": "workspace:*",
    "@vibest/ui": "workspace:*",
    "@vitejs/plugin-react": "^5.0.1",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-serialize": "0.14.0",
    "@xterm/addon-webgl": "^0.19.0",
    "@xterm/headless": "6.0.0",
    "@xterm/xterm": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron": "^39.4.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "lucide-react": "^0.511.0",
    "nanoid": "^5.1.6",
    "next-themes": "^0.4.6",
    "p-queue": "^9.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-scan": "^0.4.3",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vite": "^7.2.6",
    "vitest": "^3.2.4",
    "zod": "^3.24.1",
    "zustand": "^5.0.5"
  }
}
